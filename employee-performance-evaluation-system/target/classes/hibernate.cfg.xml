<hibernate-configuration>  
    <session-factory>  
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>  
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/anudip_epes_db</property>  
        <property name="hibernate.connection.username">root</property>  
        <property name="hibernate.connection.password">root</property>  
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>  
        <property name="hibernate.hbm2ddl.auto">update</property>  
        <property name="show_sql">true</property>  

        <mapping class="com.epes.anudip.entity.Employee"/>
        <mapping class="com.epes.anudip.entity.Department"/>
        <mapping class="com.epes.anudip.entity.KPI"/>
        <mapping class="com.epes.anudip.entity.PerformanceReview"/>
        <mapping class="com.epes.anudip.entity.Report"/>
    </session-factory>  
</hibernate-configuration>